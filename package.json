{
  "name": "diff-test",
  "version": "0.1.0",
  "description": "Only run tests affected by your git changes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "diff-test": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "test",
    "testing",
    "git",
    "diff",
    "affected",
    "ci",
    "vitest",
    "jest",
    "mocha",
    "playwright"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
